<Application x:Class="Weather_App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Weather_App" 
             xmlns:views="clr-namespace:Weather_App.Views"
             xmlns:viewModels ="clr-namespace:Weather_App.ViewModels">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewModels:HomeViewModel}">
                <views:HomeView/>
            </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:DetailesViewModel}">
            <views:DetailesView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:AddViewModel}">
            <views:AddView/>
        </DataTemplate>
    </Application.Resources>
</Application>
